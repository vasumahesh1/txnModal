html
	head
		// Needs Animate.css
		link(rel='stylesheet',href='../dependencies/animate.css')
		// Example CSS for Target Containers etc
		link(rel='stylesheet',href='css/modal.css')
		// JQuery Required
		script(src='http://code.jquery.com/jquery-2.1.3.min.js')
		// Main Modal Plugin
		script(src='../src/txnModal.js')
		// Various Example Bootstraps
		script(type='text/javascript', src='js/modal-bootstrap.js')
	body
		#normal-modal
			p Normal Full Scale Modal
			button.sample-button#closeModalBtn Close this
		#css-modal
			p CSS Overriden Modal
		#target-modal
			p Target Modal
			button.sample-button#closeModalBtn2 Close this
		#target-modal-2
			p Target Modal
			button.sample-button#closeModalBtn3 Close this
		#basic-modal 
			p Very Basic Modal
		#overflow-modal 
			p.overflow-text-sample Overflow Text
			p.overflow-text-sample Overflow Text
			p.overflow-text-sample Overflow Text
			p.overflow-text-sample Overflow Text
			p.overflow-text-sample Overflow Text
			p.overflow-text-sample Overflow Text
			p.overflow-text-sample Overflow Text
			p.overflow-text-sample Overflow Text
		.row
			.title-row Basic Modal
			.text-row Modal with nothing Overriden
			button.sample-button#click-basic-modal-btn Basic Empty Modal
		.row
			.title-row Normal Modal
			.text-row Basic Modal with Overlapped Close Button.sample-button
			button.sample-button#click-btn Normal Modal
		.row
			.title-row Normal CSS Overriden Modal
			.text-row Basic Modal with Overriden CSS
			button.sample-button#click-css-btn Custom CSS Modal
		.row
			.title-row Normal Overflown Modal [Buggy]
			.text-row Basic Modal with Overflowing Content
			button.sample-button#click-overflow-btn Normal Overflow Modal
		.row
			.title-row Target Modal #1
			.text-row Modal with Target Attribute Set to some Absolute Container
			div#temp-parent-container Absoluted Container
			button.sample-button#click-target-1-btn Open in Fixed/Absoluted Target Window
		.row
			.title-row Target Modal #2
			.text-row Modal with Target Attribute Set to some Local Container
			button.sample-button#click-target-2-btn Open in Local Target Window
			div#temp-parent-container-2 Local Container Inline