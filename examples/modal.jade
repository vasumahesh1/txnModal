html
	head
		// Needs Animate.css
		link(rel='stylesheet',href='../dependencies/animate.css')
		// Example CSS for Target Containers etc
		link(rel='stylesheet',href='css/modal.css')
		// JQuery Required
		script(src='http://code.jquery.com/jquery-2.1.3.min.js')
		// Main Modal Plugin
		script(src='../src/txnModal.js')
		// Various Example Bootstraps
		script(type='text/javascript', src='js/modal-bootstrap.js')
	body
		#normal-modal
			p Normal Full Scale Modal
			button#closeModalBtn Close this
		#target-modal
			p Target Modal
			button#closeModalBtn2 Close this
		#target-modal-2
			p Target Modal
			button#closeModalBtn3 Close this
		#basic-modal 
			p Very Basic Modal
		.row
			button#click-btn Normal Modal
		.row
			div#temp-parent-container Absoluted Container
		.row
			button#click-btn-2 Open in Fixed/Absoluted Target Window
		.row
			button#click-btn-3 Open in Local Target Window
		.row
			div#temp-parent-container-2 Local Container Inline
		.row
			button#click-basic-modal-btn Basic Empty Modal